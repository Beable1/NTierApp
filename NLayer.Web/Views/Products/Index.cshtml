@model List<ProductWithCategoryDto>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>

            <td>Stock</td>
            <td>Category</td>
            <td>Created Date</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedTime</td>
                <td> <a class="btn btn-secondary" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Sil</a>
                </td>
               
            </tr>
        }

    </tbody>

</table>

<a class="btn-link" asp-area="" asp-controller="Products" asp-action="Save">Add Product</a>